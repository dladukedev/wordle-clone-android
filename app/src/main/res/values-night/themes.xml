<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Splash" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">#121213</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon</item>
        # animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.Wordle</item>  # Required.
    </style>


    <style name="Theme.Wordle" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">#121213</item>
    </style>
</resources>